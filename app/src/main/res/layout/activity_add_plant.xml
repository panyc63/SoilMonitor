<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_plant">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_addplant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_logout"
        android:elevation="4dp"
        app:title="Add Plant"
        app:titleTextColor="#FFFFFF">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linear_error"
        android:layout_width="match_parent"
        android:layout_marginTop="150sp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/Red"
            android:text=""

            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_plant1"
        android:layout_width="match_parent"
        android:layout_below="@id/linear_error"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/plant"

            android:layout_height="40dp" />
        <EditText
            android:id="@+id/plantid"
            android:hint="Sensor ID"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_plant2"
        android:layout_below="@id/linear_plant1"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:src="@drawable/plant"

            android:layout_height="40dp" />
        <EditText
            android:id="@+id/plantname"
            android:hint="Plant Name"
            android:layout_width="200sp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/plantbtn"
        android:layout_margin="20sp"
        android:layout_below="@id/linear_plant2"
        android:text="Add Plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</RelativeLayout>