<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Plant_Setting">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_psetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:navigationIcon="@drawable/ic_logout"
        android:elevation="4dp"
        app:title="Plants Settings"
        app:titleTextColor="#FFFFFF">
    </android.support.v7.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_below="@id/toolbar_psetting"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/mode1_psetting"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <Switch
                    android:layout_width="match_parent"
                    android:text="Manual Mode"
                    android:id="@+id/mode1"
                    android:checked="false"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@id/mode1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Top Up Amount: "
                        android:layout_height="wrap_content" />
                    <EditText
                        android:id="@+id/et_Mode1_topup"
                        android:enabled="false"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/mode1_psetting"
            android:id="@+id/mode2_psetting"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Switch
                android:layout_width="match_parent"
                android:text="Auto Mode 1"
                android:id="@+id/mode2"
                android:checked="false"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/mode2"
                android:id="@+id/mode2_1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Top Up Amount: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_Mode2_topup"
                    android:enabled="false"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/mode2_1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Above Amount: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_Mode2_above"
                    android:enabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/mode2_psetting"
            android:id="@+id/mode3_psetting"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Switch
                android:layout_width="match_parent"
                android:text="Auto Mode 2"
                android:id="@+id/mode3"
                android:checked="false"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/mode3"
                android:id="@+id/mode3_1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Top Up Amount: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_Mode3_topup"
                    android:enabled="false"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/mode3_1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Time: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_Mode3_time"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:hint="HH:MM:SS"
                    android:layout_height="wrap_content"
                     />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/mode3_psetting"
            android:id="@+id/mode4_psetting"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Switch
                android:layout_width="match_parent"
                android:text="Auto Mode 3"
                android:id="@+id/mode4"
                android:checked="false"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/mode4"
                android:id="@+id/mode4_1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Top Up Amount: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_Mode4_topup"
                    android:enabled="false"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/mode4_1"
                android:id="@+id/mode4_2"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Start Time: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_Mode4_StartTime"
                    android:enabled="false"
                    android:hint="HH:MM:SS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@id/mode4_2"
                android:id="@+id/mode4_3"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Interval: "
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/et_Mode4_Interval"
                    android:layout_width="match_parent"
                    android:enabled="false"

                    android:hint="Hours"
                    android:layout_height="wrap_content"
                    android:inputType="number" />


            </LinearLayout>

        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:text="Update"
            android:gravity="center_horizontal"
            android:layout_below="@+id/mode4_psetting"
            android:layout_marginTop="10sp"
            android:id="@+id/btnUpdate"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
