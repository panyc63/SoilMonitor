<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="20sp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_margin="10sp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/plantpic"
                android:layout_width="80dp"
                android:src="@drawable/plant"
                android:layout_height="80dp" />
            <TextView
                android:layout_toEndOf="@+id/plantpic"
                android:layout_width="wrap_content"
                android:text="Plant Name:"
                android:id="@+id/plantname_add"
                android:textSize="15sp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/plantpic"
                android:layout_below="@+id/plantname_add"
                android:textSize="15sp"
                android:text="0"
                android:id="@+id/plant_name_add"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/plantname_add"
                android:id="@+id/Moisture_Level"
                android:textSize="15sp"
                android:text="@string/moisture_level"
                android:layout_marginStart="20sp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/plant_moisture_add"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/plantname_add"
                android:layout_marginStart="50sp"
                android:layout_below="@+id/plantname_add"
                android:textSize="15sp"
                android:text="0"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    

</LinearLayout>